<div class="jumbotron text-center">
    <h1 class="display-4">Burgers!</h1>
    <img src="/assets/img/b.jpeg" class="img-fluid" alt="Responsive image">
    <p class="lead">Bread with stuff between them!</p>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 text-center">
            <h2>Burgers to eat!</h2>
            <ul>
                {{#each Burgers}}
                {{#unless devoured}}
                <p>{{id}}. {{burger_name}}</p>
                <button type="button" class="btn btn-primary devour" value={{id}}>DEVOUR BURGER</button>
                <hr>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4 text-center">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="newburger">Burger Name:</label>
                    <input type="text" id="newburger" name="name">
                </div>

                <button type="submit" id="submit">Add Burger</button>
            </form>
        </div>
        <div class="col-md-4 text-center">
            <h2>Burgers in your belly!</h2>
            <ul>
                {{#each Burgers}}
                {{#if devoured}}
                <p>{{id}}. {{burger_name}}</p>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>